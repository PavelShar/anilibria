{
    mac: {
        icon: 'buildResources/icons/app/anilibria.icns',
        target: [
            'dmg'
        ],
        category: 'public.app-category.video'
    },
    win: {
        icon: 'buildResources/icons/app/anilibria.ico',
        target: [
            {
                target: 'nsis',
                arch: [
                    'x64',
                    'ia32',
                    'arm64'
                ],
            },
            {
                target: 'portable',
                arch: [
                    'x64',
                    'ia32',
                    'arm64'
                ],
            },
        ]
    },
    snap: {
        publish: [
            {
                provider: 'github',
                releaseType: 'release',
            },
            {
                repo: 'anilibrix',
                channels: [
                    'stable'
                ],
                provider: 'snapStore',
                publishAutoUpdate: false,
            },
        ],
    },
    nsis: {
        oneClick: false,
        perMachine: true,
        installerSidebar: 'buildResources/installer/installerSidebar.bmp',
        deleteAppDataOnUninstall: true,
        allowToChangeInstallationDirectory: true,
    },
    appId: 'com.anilibria.anilibrix2',
    files: [
        "out",
        "buildResources",
    ],
    linux: {
        icon: 'buildResources/icons/app',
        category: 'Video',
        target: [
            {
                target: 'AppImage',
                arch: [
                    'x64',
                    'ia32',
                    'arm64'
                ],
            },
            {
                target: 'snap',
                arch: [
                    'x64'
                ],
            },
        ],
    },
    publish: {
        provider: 'github',
        releaseType: 'release',
    },
    productName: 'AniLibrix2',
    directories: {
        output: 'release/v${version}/${os}',
    },
    artifactName: '${productName}-${os}-${arch}-${version}.${ext}'
}
